<%= form_with(model: [ @article, @article.comments.build ],
# the model uses an array that will build a nested route. 
local: true) do |form| %>
    <p>
        <%= form.label :commenter %>
        <%= form.text_field :commenter  %>
    </p>
    <p>
        <%= form.label :body %><br>
        <%= form.text_area :body %>
    </p>
    <p>
        <%= form.submit %>
    </p>
<% end %>